# ArtinSmartRealty Production Environment Variables
# Copy this file to .env and fill in the values

# ==================== SECURITY (REQUIRED) ====================
# Generate with: openssl rand -hex 32
JWT_SECRET=

# Generate with: openssl rand -hex 16
PASSWORD_SALT=

# Environment mode (production/development)
ENVIRONMENT=production

# ==================== SUPER ADMIN (REQUIRED) ====================
SUPER_ADMIN_EMAIL=admin@yourdomain.com
SUPER_ADMIN_PASSWORD=

# ==================== DATABASE (REQUIRED) ====================
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_DB_PASSWORD@localhost:5432/artinrealty

# ==================== REDIS (REQUIRED) ====================
REDIS_URL=redis://localhost:6379/0

# ==================== CORS (REQUIRED FOR PRODUCTION) ====================
# Comma-separated list of allowed origins (NO WILDCARD "*" IN PRODUCTION!)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ==================== AI API (REQUIRED) ====================
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# ==================== TELEGRAM BOT (OPTIONAL) ====================
# Get from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# ==================== WHATSAPP (OPTIONAL) ====================
# Meta WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_VERIFY_TOKEN=

# Twilio (Alternative)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# WAHA (Self-hosted - Alternative)
WAHA_API_URL=http://localhost:3000
WAHA_API_KEY=

# ==================== FILE UPLOADS ====================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE_MB=20

# ==================== APPLICATION ====================
# Frontend URL (for email links, etc.)
FRONTEND_URL=https://app.yourdomain.com

# Backend URL
BACKEND_URL=https://api.yourdomain.com

# Debug mode (NEVER set to true in production!)
DEBUG=false

# ==================== OPTIONAL SERVICES ====================
# Email service (SendGrid, AWS SES, etc.)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourdomain.com

# Sentry error tracking
SENTRY_DSN=

# Analytics
GOOGLE_ANALYTICS_ID=

# ==================== RATE LIMITING ====================
# These are defaults - adjust based on your needs
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_FORGOT_PASSWORD=3/hour
RATE_LIMIT_API=100/minute

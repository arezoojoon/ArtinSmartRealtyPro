[Unit]
Description=Artin Smart Realty AI Bot
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/opt/ArtinSmartRealty/backend
Environment="PATH=/opt/ArtinSmartRealty/backend/venv/bin"
ExecStart=/opt/ArtinSmartRealty/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
